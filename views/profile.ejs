<!DOCTYPE html>
<html lang="zh-Hant">
  <head>
    <%- include ("partials/header") %>
    <title><%= user.name %> 的個人頁面</title>
  </head>
  <body>
    <%- include ("partials/nav") %>
    <div class="profile-container">
      <!-- 使用者資訊區塊 -->
      <section class="profile-section">
        <div class="profile-header">
          <h1 class="user-name"><%= user.name %></h1>
        </div>
        <div class="user-details">
          <p class="user-register">
            註冊時間：<span class="highlight"><%= user.date %></span>
          </p>
        </div>
      </section>

      <!-- 文章列表區塊 -->
      <% if (posts.length > 0) { %>
      <section class="posts-section">
        <h2 class="posts-title">已發表的便利貼</h2>
        <div class="posts-grid">
          <% for (let i = 0; i < posts.length; i++) { %>
          <article class="post-card">
            <div class="post-body">
              <h3 class="post-title"><%= posts[i].title %></h3>
              <p class="post-content"><%= posts[i].content %></p>
              <div class="post-footer">
                <time class="post-date">發表時間：<%= posts[i].date %></time>
              </div>
            </div>
          </article>
          <% } %>
        </div>
      </section>
      <% } %>
    </div>
  </body>
</html>
